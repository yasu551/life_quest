.row.justify-content-center.align-items-center
  .col-md-6.col-11
    %h1.fs-2.text-center.my-4 実行予定の行動を作成
    = simple_form_for @scheduled_activity_form, html: { class: "mb-3" } do |f|
      = f.input :name
      .row
        .col
          = f.input :start_on, as: :date, html5: true
        .col
          = f.input :end_on, as: :date, html5: true
        .col
          = f.input :time, as: :time, html5: true
      .row
        .col
          = f.input :schedule_type, collection: ScheduledActivityForm.schedule_type_collection, include_blank: false
        .col
          = f.input :weekday, collection: ScheduledActivityForm.weekday_collection
        .col
          = f.input :day, collection: ScheduledActivityForm::DAYS
      = render "application/markdown_textarea", f:, method: :memo
      = f.button :submit, class: "btn btn-primary d-block w-100"
    = link_to "一覧に戻る", activities_path, class: "btn btn-link"
