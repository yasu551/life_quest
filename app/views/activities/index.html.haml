.row.justify-content-center.align-items-center.mt-5
  .col-md-6.col-11
    %ul.nav.nav-tabs.mb-3
      - current_scope_chains = params[:scope_chains]
      %li.nav-item
        - scope_chains = "scheduled"
        = link_to "実行予定", activities_path(scope_chains:), class: class_names("nav-link", active: current_scope_chains == scope_chains)
      - ActivityEvaluation::VALUES.each do |value|
        - scope_chains = "performed.#{value}"
        %li.nav-item
          = link_to value.to_s.capitalize, activities_path(scope_chains:),
                    class: class_names("nav-link", active: current_scope_chains == scope_chains)
      %li.nav-item
        = link_to "全て", activities_path, class: class_names("nav-link", active: current_scope_chains.blank?)
    .hstack.gap-2.mb-3
      = link_to "新規作成", new_activity_path, class: "btn btn-primary"
      = link_to "実行予定の行動を作成", new_scheduled_activity_path, class: "btn btn-primary"
    .list-group.mb-3
      - @activities.each do |activity|
        = link_to edit_activity_path(activity), class: "list-group-item list-group-item-action" do
          %span= activity.name
    = paginate @activities
