= turbo_refreshes_with(method: :morph, scroll: :preserve)

.row.container-fluid
  .col-md-6.col-11
    %h1.fs-2.text-center.my-4 行動を編集
    .mb-3= render 'form', activity: @activity
    .hstack.justify-content-between
      = link_to '一覧に戻る', activities_path, class: 'btn btn-link'
      = button_to "削除", activity_path(@activity), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger"
  .col-md-6.col-11
    = turbo_frame_tag dom_id(@activity, :challenges), src: activity_challenges_path(@activity)
