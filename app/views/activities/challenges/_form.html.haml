= simple_form_for [ activity, challenge ] do |f|
  = f.input :name, autofocus: true
  = f.input :description, input_html: { data: { controller: "textarea-autogrow" } }
  = f.input :perform_at, html5: true
  = f.input :performed_at, html5: true
  = f.input :active
  = f.button :submit, submit_button_label(challenge), class: "btn btn-primary d-block w-100"
