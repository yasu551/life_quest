.toast-container.position-fixed.top-0.end-0.pt-5.pe-2
  - flash.each do |key, value|
    .toast{ data: { controller: :toast }, role: :alert }
      .toast-body{ class: "d-flex justify-content-between align-items-center text-white bg-#{key == "notice" ? "success" : "danger"}" }
        %p.mb-0= value
        %button.btn-close{ type: :button, data: { bs: { dismiss: :toast } }, aria: { label: "閉じる" } }
