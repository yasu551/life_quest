= simple_form_for activity_summary do |f|
  .hstack.gap-2
    = f.input :start_on, html5: true
    = f.input :end_on, html5: true
  = render "application/markdown_textarea", f:, method: :content
  = render "application/markdown_textarea", f:, method: :memo
  .vstack.gap-2.mb-4
    = f.label :activities
    = f.collection_select :activity_ids, activities, :id, :name, {}, { multiple: true, data: { controller: "slim-select" } }
  = f.button :submit, submit_button_label(activity_summary), class: "btn btn-primary d-block w-100"
