= simple_form_for task do |f|
  = f.input :name, autofocus: true
  = f.input :completion_condition
  = f.input :status, include_blank: false
  = f.input :sub_tasks
  = f.input :deadline_on, html5: true
  = f.input :memo
  = f.button :submit, submit_button_label(task), class: 'btn btn-primary d-block w-100'
