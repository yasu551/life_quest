= simple_form_for task do |f|
  = f.input :name, autofocus: true
  = f.input :completion_condition, input_html: { data: { controller: 'textarea-autogrow' } }
  = f.input :status, include_blank: false
  = f.input :sub_tasks, input_html: { data: { controller: 'textarea-autogrow' } }
  = f.input :deadline_on, html5: true
  = f.input :perform_on, html5: true
  = f.association :tags, collection: tags, label_method: :name, value_method: :id
  = f.input :memo, input_html: { data: { controller: 'textarea-autogrow' } }
  = f.button :submit, submit_button_label(task), class: 'btn btn-primary d-block w-100'
